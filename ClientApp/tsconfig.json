{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    "types": [
      "vue-typescript-import-dts",
	    "@types/node"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs":true
  },
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": false
}